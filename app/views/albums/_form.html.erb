<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, class: "form-control" %>
</div>

<div class="field">
  <%= f.fields_for :images do |image| %>
    <%= image.hidden_field :user_id, value: current_user.id %>
    <%= image.hidden_field :album_id, value: f %>
    <%= image.label :photo %>
    <%= image.file_field :photo, multiple: true,name: "images_attributes[photo][]", class: "form-control" %>
  <% end %>
</div>

<div class="actions">
  <%= f.submit "Submit", class: "btn btn-default btn-primary martop10px" %>
</div>
