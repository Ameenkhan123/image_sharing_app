<div class="cate_type margin_top_15px">
  <div>
    <div class="col-md-12">
      <div class="borbot1px">
        <%#= link_to(profile_path(@album.user)) do %>
        <strong>Owner Name: <%= @album.user.name.try(:titleize) %></strong>
        <%# end %>
        <br>
        <span>
          Album Name:
          <%= link_to @album.name.titleize, '#' %>
        </span>
        &nbsp;
        <span>
          <i class="fa fa-clock-o" aria-hidden="true" style="font-size:15px" data-toggle="tooltip" title="Created&Date"></i> <%= formate_datetime(@album.created_at) %>
        </span> &nbsp;
      </div>
      <div class="text-right editdeletbtnholder">
        <% if user_signed_in? && current_user.is_associated_album?(@album.user.id) %>
          <span>
            <%= link_to(album_path(@album),
            data: {confirm: 'Are you sure?'}, method: :delete) do %>
              <i class="fa fa-trash-o" aria-hidden="true" data-toggle="tooltip" title="Delete"></i>
            <% end %>
          </span>
        <% end %>
      </div>
      <div>
        <% @album.images.each do |img| %>
          <span class="col-md-12">
            <%= image_tag(img.photo_url, class: "photosize") if img.photo? %>
          </span>
        <% end %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<style type="text/css">
  img.photosize{
    width: 13%!important;
    height: 20%!important;
    padding: 10px;
  }
</style>
